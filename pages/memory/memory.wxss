page {
  background-color: #FBF2E3;
}

.view-top-box {
  position: absolute;
  top: 0rpx;
  width: 100%;
  height: 240rpx;
  background-color: #467B73;
  border-bottom-left-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
}

.view-notice-box {
  position: absolute;
  top: 10rpx;
  left: 35rpx;
  right: 35rpx;
  display: flex;
  align-items: center;
}

.img-notice {
  position: relative;
  width: 35rpx;
  height: 32rpx;
  flex-shrink: 0;
}

.text-notice {
  position: relative;
  color: #FEFFFF;
  font-size: 30rpx;
  margin-left: 20rpx;
}

.view-memorySum-box {
  position: absolute;
  top: 87rpx;
  left: 35rpx;
  right: 35rpx;
  display: flex;
  align-items: center;
}

.text-memorySum {
  position: relative;
  color: #FEFFFF;
  font-size: 30rpx;
}

.img-memorySort {
  position: relative;
  width: 50rpx;
  height: 50rpx;
  margin-left: auto;
}

.view-memoryCell-box {
  position: relative;
  background-color: #FEFFFF;
  border-radius: 30rpx;
  top: 160rpx;
  margin: 0 35rpx;
  display: flex;
  flex-direction: column;
}

.text-memoryCell-title {
  position: relative;
  color: #000;
  font-size: 30rpx;
  font-weight: bold;
  margin: 20rpx 130rpx 0 30rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}

.text-memoryCell-content {
  position: relative;
  color: #434646;
  font-size: 24rpx;
  margin: 5rpx 130rpx 0 30rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}

.view-memoryCell-picList {
  position: relative;
  margin: 5rpx 130rpx 0 30rpx;
}

.img-memoryCell-picCell {
  position: relative;
  width: 90rpx;
  height: 90rpx;
}

.view-memoryCell-info {
  position: relative;
  margin: 5rpx 130rpx 20rpx 30rpx;
  color: #CACED1;
  font-size: 24rpx;
}

.text-memoryCell-date {
  position: relative;
}

.text-memoryCell-address {
  position: relative;
  margin-left: 30rpx;
}

.img-memoryCell-editor {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  right: 35rpx;
  top: 50%;
  transform: translateY(-50%);
}

.img-empty {
  position: absolute;
  width: 128rpx;
  height: 128rpx;
  top: 500rpx;
  left: 50%;
  transform: translateX(-50%);
}

.text-empty {
  position: absolute;
  font-size: 32rpx;
  left: 50%;
  transform: translateX(-50%);
  top: 630rpx;
  color: #467B73;
}

.img-guidance {
  position: fixed;
  width: 120rpx;
  height: 120rpx;
  right: 90rpx;
  bottom: 200rpx;
}

.text-addTip {
  position: fixed;
  right: 70rpx;
  bottom: 330rpx;
  font-size: 30rpx;
  color: #467B73;
  transform: rotate(-45deg);
}

.img-addMemory {
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  right: 42rpx;
  bottom: 70rpx;
}